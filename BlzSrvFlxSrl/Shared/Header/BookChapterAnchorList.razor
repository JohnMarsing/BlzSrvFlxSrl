@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@if (BibleSearchState!.Value.ShowBookChapterAnchorList)
{
	<ul class="list-inline">

		@for (int i = 1; i <= BibleSearchState.Value.BibleBook.LastChapter; i++)
		{
			<li class="list-inline-item">
				<a href='@AnchorBookChapterUrl(i)' title="@BookChapterTitle(i)" target="_blank">@i</a>
			</li>
		}
	</ul>

	if (BibleSearchState!.Value.ShowWebsiteSelect)
	{
		<WebsiteSelect />
	}
}
